<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:fontFamily="@font/josefinsans_regular"
            app:titleTextColor="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Penjualan">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.githang.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Konfirmasi Data"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAbuMuda"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Nama Pembeli"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/nama_pembeli"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Nama Kavling"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/nama_kavling"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Harga Kavling"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/harga_kavling"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Harga Bersih Kavling"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/harga_bersih"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Metode Bayar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/metode_bayar"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Diskon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/diskon"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Total Yang Dibayar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight=".8"
                    android:id="@+id/message"
                    android:textSize="10sp"
                    android:textColor="@color/colorRed"
                    android:fontFamily="@font/josefinsans_light"
                    android:text="Sudah Termasuk Uang Booking"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/total_dibayar"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/colorTitle"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Jumlah Uang DP"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/jumlah_uang_dp"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Lama Angsuran DP"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:id="@+id/lama_angsuran_dp"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_weight="1"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Jumlah Uang Per Angsuran DP"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:id="@+id/jumlah_angsuran_dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_weight="1"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Tanggal Pembayaran Uang DP"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:id="@+id/tanggal_pembayaran_dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTitle"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Jumlah Uang Booking"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:id="@+id/jumlah_uang_booking"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Tanggal Pembayaran Uang Booking"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/tanggal_uang_booking"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Lama Angsuran Kavling"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/lama_angsuran"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Jumlah Angsuran Perbulan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/jumlah_angsuran"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Tanggal Pembayaran Angsuran"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/tanggal_angsuran"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTitle"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Status Penjualan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/status"
                    android:textColor="@color/colorAbuabu"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Menunggu Persetujuan Pimpinan"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/border_green"
                    android:text="Prev"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/border_green"
                    android:text="Simpan Data"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>