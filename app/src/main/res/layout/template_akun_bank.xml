<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@mipmap/card"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Primaland"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/nama_unit"
        android:fontFamily="@font/josefinsans_regular"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/kode"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu15"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Rekening"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/nama_rekening"
                android:text="Prima"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Bank"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/nama_bank"
                android:text="BCA"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="No Rek"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/no_rekening"
                android:textAlignment="center"
                android:text="132910830912830"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="Saldo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/saldo"
                android:textAlignment="center"
                android:text="Rp 250.000.000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/edit"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textAlignment="center"
            android:textColor="@color/colorYellow"
            android:layout_height="wrap_content"
            android:text="Edit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/hapus"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorRed"
            android:textAlignment="center"
            android:text="Hapus"/>
    </LinearLayout>
</LinearLayout>