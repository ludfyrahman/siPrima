<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@mipmap/card"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu12"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/kode"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/josefinsans_light"-->
                <!--android:textColor="@color/colorAbuabu"-->
                <!--android:textSize="12sp"-->
                <!--android:textAlignment="center"-->
                <!--android:layout_margin="2dp"-->
                <!--android:text="10 Juli 2019"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Divisi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/nama_divisi"
                android:text="Marketing"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="Nama Unit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:id="@+id/nama_unit"
                android:text="Primaland"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/edit"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textAlignment="center"
            android:textColor="@color/colorYellow"
            android:layout_height="wrap_content"
            android:text="Edit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/hapus"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorRed"
            android:textAlignment="center"
            android:text="Hapus"/>
    </LinearLayout>
</LinearLayout>