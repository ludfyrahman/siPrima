<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarTheme"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Follow Up User"
            app:titleTextColor="@color/colorPrimary" />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Nama Pembeli:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/nama_pembeli"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Mochamad Ludfi Rahman"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:background="@mipmap/input"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Tanggal Pertemuan:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.92"
                    android:layout_margin="18dp"
                    android:gravity="right"
                    android:id="@+id/tanggal_selesai"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="20 Juli 2019"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:id="@+id/btn_calendar"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/calendar"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Prospek"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="0."
                    android:id="@+id/prospek_rendah"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:text="Rendah"
                    android:textSize="12sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:layout_weight="0."
                    android:id="@+id/prospek_sedang"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:text="Sedang"
                    android:textSize="12sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:layout_weight="0."
                    android:id="@+id/prospek_tinggi"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:text="Tinggi"
                    android:textSize="12sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Pembahasan"/>
            <EditText
                android:id="@+id/pembahasan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/input"
                android:ems="0"
                android:gravity="top"
                android:fontFamily="@font/josefinsans_regular"
                android:hint="Ex sosialisasi Pertama"
                android:inputType="textMultiLine"
                android:textSize="12sp"
                android:padding="24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Kendala"/>
            <EditText
                android:id="@+id/kendala"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/input"
                android:ems="0"
                android:textSize="12sp"
                android:gravity="top"
                android:fontFamily="@font/josefinsans_regular"
                android:hint="Ex Jarak sangat jauh"
                android:inputType="textMultiLine"
                android:padding="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefinsans_regular"
                    android:layout_weight="1"
                    android:text="Foto Kegiatan"/>
                <Button
                    android:layout_width="250dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pilih_gambar"
                    android:text="Pilih Gambar"
                    android:background="@drawable/border_green"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/gambar"
                android:src="@drawable/no_image"/>
            <Button
                android:id="@+id/simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@mipmap/button"
                android:text="Simpan"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>