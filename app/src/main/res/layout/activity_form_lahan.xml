<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Tambah Lahan" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Nama Lahan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/input"
                    android:hint="Ex Lahan Dpb"
                    android:id="@+id/nama_lahan"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="15sp"
                    android:textColor="@color/colorAbuabu"
                    android:paddingLeft="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Harga Lahan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/input"
                    android:hint="Ex 200000"
                    android:id="@+id/harga_lahan"
                    android:inputType="number"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="15sp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/colorAbuabu"
                    android:paddingLeft="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="Tanggal Mulai Bayar"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:background="@mipmap/input"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.92"
                            android:layout_margin="18dp"
                            android:id="@+id/tgl_mulai_bayar"
                            android:layout_marginTop="18dp"
                            android:fontFamily="@font/josefinsans_regular"
                            android:text="20 Juli 2019"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.1"
                            android:id="@+id/start_date"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="Tanggal Akhir Bayar"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:background="@mipmap/input"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.92"
                            android:layout_margin="18dp"
                            android:id="@+id/tgl_akhir_bayar"
                            android:layout_marginTop="18dp"
                            android:fontFamily="@font/josefinsans_regular"
                            android:text="20 Juli 2019"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.1"
                            android:id="@+id/end_date"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Luas Lahan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/input"
                    android:hint="Ex 20"
                    android:id="@+id/luas_lahan"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="15sp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/colorAbuabu"
                    android:paddingLeft="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Alamat"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/input"
                    android:hint="Ex Jalan Mawar"
                    android:gravity="top"
                    android:id="@+id/alamat"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="15sp"
                    android:textColor="@color/colorAbuabu"
                    android:paddingLeft="18dp"
                    android:paddingTop="18dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@mipmap/button"
                android:text="Simpan"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>