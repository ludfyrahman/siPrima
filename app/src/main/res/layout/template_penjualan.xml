<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@mipmap/card"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Al Ayyubi 21"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/nama_penjualan"
        android:fontFamily="@font/josefinsans_regular"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/kode"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gambar"
                android:layout_height="match_parent"
                android:src="@drawable/dpb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Pembeli"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/nama_pembeli"
                android:text="Mochamad Ludfi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Penjual"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/link_web"
                android:text="Dani"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_light"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:id="@+id/tanggal_penjualan"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="10 Juli 2019"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="Harga Deal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/harga_deal"
                android:textAlignment="center"
                android:text="Rp 127.000.000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/edit"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textAlignment="center"
            android:textColor="@color/colorYellow"
            android:layout_height="wrap_content"
            android:text="Edit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/hapus"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorRed"
            android:textAlignment="center"
            android:text="Hapus"/>
    </LinearLayout>
</LinearLayout>