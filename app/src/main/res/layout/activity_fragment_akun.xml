<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akun.Fragment_Akun">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:fontFamily="@font/josefinsans_regular"
            app:titleTextColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Profil Saya" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/profil"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/nama_pengguna"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Mochamad Ludfi Rahman"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefinsans_light"
            android:gravity="center"
            android:id="@+id/email_pengguna"
            android:text="ludfyr@gmail.com"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="Ubah Profil"
                android:fontFamily="@font/josefinsans_light"
                android:layout_width="fill_parent"
                android:id="@+id/ubah_profil"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.9" />
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="20dp"
                android:src="@drawable/forward"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="Pengaturan"
                android:id="@+id/pengaturan"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/josefinsans_light"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9" />
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="20dp"
                android:src="@drawable/forward"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="18dp"
                android:textStyle="normal"
                android:id="@+id/keluar"
                android:textColor="@color/colorPrimary"
                android:text="Keluar"
                android:fontFamily="@font/josefinsans_semibold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>