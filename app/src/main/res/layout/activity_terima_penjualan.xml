<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Penjualan"
        android:fontFamily="@font/josefinsans_regular"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Pilih Akun Bank*"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/akun_bank"
                android:text="Akun Bank"/>
            <Button
                android:layout_weight="0."
                android:id="@+id/btn_akun_bank"
                android:layout_width="130dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:background="@drawable/box_shadow"
                android:text="Pilih Akun Bank"
                android:textSize="12sp"
                android:layout_margin="8dp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Presentase Komisi* Ex 2.5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/presentase_komisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/input"
                android:gravity="top"
                android:ems="0"
                android:fontFamily="@font/josefinsans_regular"
                android:hint="ex 2.5"
                android:inputType="number"
                android:textSize="15sp"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite" />
</LinearLayout>