<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Penjualan">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <com.githang.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Pembayaran Kavling"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAbuMuda"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Metode Pembayawan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/tunai"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/box_shadow"
                    android:text="Tunai"
                    android:textSize="12sp"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/tunai_bertahap"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:text="Tunai Bertahap"
                    android:textSize="12sp"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <!--<ru.kolotnev.formattedittext.DecimalEditText-->
                <!--android:id="@+id/harga"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:inputType="number"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginEnd="8dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:background="@mipmap/input"-->
                <!--android:ems="0"-->
                <!--android:text="20000000"-->
                <!--android:fontFamily="@font/josefinsans_regular"-->
                <!--android:textSize="15sp"-->
                <!--android:paddingLeft="24dp"-->
                <!--android:paddingRight="24dp"-->
                <!--android:paddingBottom="12dp"-->
                <!--app:rounding="3"/>-->
            <LinearLayout
            android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_diskon"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Diskon"/>
                <ru.kolotnev.formattedittext.DecimalEditText
                    android:id="@+id/diskon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@mipmap/input"
                    android:ems="0"
                    android:fontFamily="@font/josefinsans_regular"
                    android:hint="Exp 20000"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="12dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_harga_bersih"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Harga Bersih"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/harga_jual_bersih"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_uang_muka"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Uang Muka/DP"/>
                <ru.kolotnev.formattedittext.DecimalEditText
                    android:id="@+id/uang_muka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@mipmap/input"
                    android:ems="0"
                    android:fontFamily="@font/josefinsans_regular"
                    android:hint="Exp 20000000"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_uang_booking"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Uang Booking"/>
                <ru.kolotnev.formattedittext.DecimalEditText
                    android:id="@+id/uang_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@mipmap/input"
                    android:ems="0"
                    android:fontFamily="@font/josefinsans_regular"
                    android:hint="Exp 20000"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_tanggal_bayar_booking"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Tanggal Bayar Booking"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="@mipmap/input"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.92"
                        android:layout_margin="18dp"
                        android:id="@+id/tanggal_bayar_booking"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="20 Juli 2019"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:id="@+id/calendar_bayar_booking"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/calendar"/>
                </LinearLayout>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/linear_sisa_dp"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp"
                   android:fontFamily="@font/josefinsans_regular"
                   android:text="Sisa DP Yang Harus Di bayar Setelah Booking"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="16dp"
                       android:id="@+id/sisa_dp"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_jumlah_angsuran_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Jumlah Angsuran DP"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/jumlah_angsuran_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@mipmap/input"
                        android:ems="0"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="Exp 20000"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_jumlah_dp_perbulan"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Jumlah Uang Dp Yang Di Bayar Perbulan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:id="@+id/jumlah_dp_perbulan"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="-"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_tanggal_bayar_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Tanggal Bayar DP"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/tanggal_bayar_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@mipmap/input"
                        android:ems="0"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="Exp 2"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_sisa_uang_set_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Sisa Uang Yang Harus Di Bayar Setelah DP"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:id="@+id/sisa_uang_set_dp"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_lama_angsuran_bulanan"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Lama Angsuran Bulanan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/lama_angsuran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@mipmap/input"
                        android:ems="0"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="Exp 180"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_jumlah_angsuran_perbulan"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Jumlah Uang Angsuran Perbulan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/jumlah_angsuran_perbulan"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_tanggal_bayar_angsuran"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Tanggal Bayar Angsuran"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tanggal_bayar_angsuran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@mipmap/input"
                        android:ems="0"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="Exp 20000"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_tanggal_sisa_pembayaran"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Tanggal Sisa Pembayaran"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="@mipmap/input"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.92"
                        android:layout_margin="18dp"
                        android:id="@+id/tanggal_sisa_pembayaran"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:text="20 Juli 2019"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:id="@+id/calendar_sisa_pembayaran"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/calendar"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_lain_lain"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Lain - Lain"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/lain_lain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@mipmap/input"
                        android:ems="0"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="lain lain"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/border_green"
                    android:text="Prev"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/border_green"
                    android:text="Next"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>