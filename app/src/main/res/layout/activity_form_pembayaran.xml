            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Pembayaran Kavling"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAbuMuda"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Metode Pembayawan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/tunai"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/box_shadow"
                    android:text="Tunai"
                    android:textSize="12sp"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/tunai_bertahap"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:text="Tunai Bertahap"
                    android:textSize="12sp"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
                android:text="Diskon"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/input"
                android:ems="0"
                android:fontFamily="@font/josefinsans_regular"
                android:hint="Exp 20000"
                android:inputType="number"
                android:textSize="15sp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/josefinsans_regular"
