<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Detail Pembeli" />
    </android.support.design.widget.AppBarLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/gambar"
               android:src="@drawable/dpb"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="16dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/josefinsans_semibold"
                       android:textSize="18sp"
                       android:layout_weight="1"
                       android:textColor="@color/colorPrimary"
                       android:text="Kegiatan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/tanggal"
                       android:gravity="right"
                       android:fontFamily="@font/josefinsans_light"
                       android:text="10 Juli 2019"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.39dp"
                   android:layout_marginTop="10dp"
                   android:background="@color/colorAbuabu"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Nama Karyawan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/nama_karyawan"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Nama Proyek"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/nama_proyek"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Nama Unit"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/nama_unit"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Kegiatan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:id="@+id/kegiatan"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Kendala"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/kendala"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Solusi"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/solusi"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="Status"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/status"
                       android:textColor="@color/colorPrimary"
                       android:fontFamily="@font/josefinsans_regular"
                       android:text="-"/>
               </LinearLayout>
           </LinearLayout>
           <Button
               android:layout_weight="0."
               android:id="@+id/selesai"
               android:layout_width="180dp"
               android:layout_height="30dp"
               android:background="@drawable/box_shadow"
               android:text="Selesaikan Kegiatan"
               android:textSize="12sp"
               android:layout_margin="16dp"
               android:textColor="@color/colorPrimary" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="16dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/josefinsans_semibold"
                       android:textSize="18sp"
                       android:layout_weight="1"
                       android:textColor="@color/colorPrimary"
                       android:text="Galery Kegiatan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/josefinsans_semibold"
                       android:textSize="12sp"
                       android:gravity="right"
                       android:id="@+id/tambah"
                       android:layout_weight="1"
                       android:textColor="@color/colorPrimary"
                       android:text="Tambah Gallery Kegiatan"/>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:paddingTop="8dp"
               android:layout_height="wrap_content">
               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/listdata"></android.support.v7.widget.RecyclerView>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:id="@+id/not_found"
               android:visibility="gone"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:src="@drawable/empty"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textSize="18sp"
                   android:textColor="@color/colorPrimary"
                   android:fontFamily="@font/josefinsans_semibold"
                   android:text="@string/empty_data"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="8dp"
                   android:textAlignment="center"
                   android:fontFamily="@font/josefinsans_semibold"
                   android:text="@string/empty_data_desc"/>
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>