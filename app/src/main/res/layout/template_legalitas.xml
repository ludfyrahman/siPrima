<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@mipmap/card"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/kode"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/gambar"
                android:layout_height="wrap_content"
                android:src="@drawable/menu4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="Nama Legalitas"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/nama"
                android:text="Mochamad Ludfi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="No Legalitas"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:id="@+id/no"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:textColor="@color/colorAbuabu"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:text="Tanggal Terbit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_regular"
                android:layout_margin="2dp"
                android:id="@+id/tanggal_terbit"
                android:textAlignment="center"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/edit"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textAlignment="center"
            android:textColor="@color/colorYellow"
            android:layout_height="wrap_content"
            android:text="Edit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/hapus"
            android:layout_margin="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorRed"
            android:textAlignment="center"
            android:text="Hapus"/>
    </LinearLayout>
</LinearLayout>